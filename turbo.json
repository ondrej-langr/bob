{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": [
        "^build",
        "typecheck",
        "lint"
      ],
      "outputs": [
        "coverage/**",
        "test-results.xml",
        ".next/**",
        "dist/**"
      ],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  },
  "globalDependencies": ["**/.env.*local"]
}
