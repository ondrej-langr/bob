{
  "name": "@ondrej-langr/bob",
  "version": "0.0.0",
  "description": "Simpler CLI applications with focus on code generation",
  "license": "ISC",
  "author": {
    "name": "Ondřej Langr",
    "email": "hi@ondrejlangr.cz"
  },
  "maintainers": [
    {
      "name": "Ondřej Langr",
      "email": "hi@ondrejlangr.cz"
    }
  ],
  "type": "module",
  "bin": "./.bin/run-bob.js",
  "scripts": {
    "prebuild": "rm -rf dist .temp",
    "build": "swc ./src -d dist --copy-files --include-dotfiles --strip-leading-paths",
    "start": "pnpm run prebuild && pnpm run build && node .bin/run-bob.js --cwd=\"./.temp\"",
    "test": "pnpm test:unit && pnpm test:types",
    "test:types": "tsc --noEmit",
    "test:unit": "vitest --watch false"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "deepmerge": "^4.3.1",
    "execa": "^9.5.1",
    "find-config": "^1.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "inquirer": "9.2.23",
    "lodash": "^4.17.21",
    "prettier": "^3.3.3",
    "yaml": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.7.42",
    "@types/find-config": "^1.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.17.6",
    "typescript": "5.5.2",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=8.15.0"
  }
}
