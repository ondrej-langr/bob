{
  "extends": "../../default.tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "strictNullChecks": true,
    "emitDeclarationOnly": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
