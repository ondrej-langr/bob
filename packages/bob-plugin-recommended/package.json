{
  "name": "@ondrej-langr/bob-plugin-recommended",
  "version": "0.1.0",
  "description": "Plugin for BOB with recommended configs and commands",
  "license": "ISC",
  "author": {
    "name": "Ondřej Langr",
    "email": "hi@ondrejlangr.cz"
  },
  "maintainers": [
    {
      "name": "Ondřej Langr",
      "email": "hi@ondrejlangr.cz"
    }
  ],
  "type": "module",
  "files": [
    "src",
    "dist",
    ".bin"
  ],
  "scripts": {
    "prebuild": "rm -rf dist .temp",
    "build": "swc ./src -d dist --copy-files --include-dotfiles --strip-leading-paths",
    "start": "pnpm run prebuild && pnpm run build && node .bin/run-bob.js --cwd=\"./.temp\"",
    "test": "pnpm test:unit && pnpm test:types",
    "test:types": "tsc --noEmit",
    "test:unit": "vitest --watch false"
  },
  "dependencies": {
    "@ondrej-langr/bob": "workspace:*"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.7.42",
    "@types/node": "^20.17.6",
    "typescript": "5.5.2",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=8.15.0"
  }
}
